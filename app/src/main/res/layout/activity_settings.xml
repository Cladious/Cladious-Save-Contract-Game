<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cyberpunk_gradient_bg"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/dark_blue_transparent"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/backButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/rounded_corner_button"
                    android:backgroundTint="@color/neon_cyan"
                    android:text="â†"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/settingsTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="âš™ï¸ Settings"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/neon_cyan"
                    android:gravity="center"
                    android:layout_marginStart="16dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- App Info -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/dark_blue_transparent"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/versionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Version 1.0.0"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/achievementProgressText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ† Achievements: 0/50"
                    android:textSize="16sp"
                    android:textColor="@color/warning_yellow"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/gameStatsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Games Played: 0"
                    android:textSize="16sp"
                    android:textColor="@color/neon_cyan"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Game Settings -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/dark_blue_transparent"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ® Game Settings"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/neon_cyan"
                    android:layout_marginBottom="12dp" />

                <!-- Sound Effects -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ”Š Sound Effects"
                        android:textSize="16sp"
                        android:textColor="@color/white" />

                    <Switch
                        android:id="@+id/soundEffectsSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                </LinearLayout>

                <!-- Vibration -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“³ Vibration"
                        android:textSize="16sp"
                        android:textColor="@color/white" />

                    <Switch
                        android:id="@+id/vibrationSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                </LinearLayout>

                <!-- Animations -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="âœ¨ Animations"
                        android:textSize="16sp"
                        android:textColor="@color/white" />

                    <Switch
                        android:id="@+id/animationsSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                </LinearLayout>

                <!-- Dark Mode -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸŒ™ Dark Mode"
                        android:textSize="16sp"
                        android:textColor="@color/white" />

                    <Switch
                        android:id="@+id/darkModeSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                </LinearLayout>

                <!-- Auto Hints -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ’¡ Auto Hints"
                        android:textSize="16sp"
                        android:textColor="@color/white" />

                    <Switch
                        android:id="@+id/autoHintSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false" />

                </LinearLayout>

                <!-- Difficulty Progress -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“ˆ Progressive Difficulty"
                        android:textSize="16sp"
                        android:textColor="@color/white" />

                    <Switch
                        android:id="@+id/difficultProgressSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Difficulty Selection -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/dark_blue_transparent"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš¡ Default Difficulty"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/neon_cyan"
                    android:layout_marginBottom="12dp" />

                <RadioGroup
                    android:id="@+id/difficultyRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/difficultyRookieRadio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸŸ¢ Rookie"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/difficultyHackerRadio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸŸ¡ Hacker"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/difficultyExpertRadio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”´ Expert"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/difficultyLegendaryRadio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸŸ£ Legendary"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/difficultyMixedRadio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ² Mixed"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </RadioGroup>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/resetProgressButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_corner_button"
                android:backgroundTint="@color/error_red"
                android:text="ðŸ—‘ï¸ Reset Progress"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp" />

            <Button
                android:id="@+id/viewAchievementsButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_corner_button"
                android:backgroundTint="@color/warning_yellow"
                android:text="ðŸ† View Achievements"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp" />

            <Button
                android:id="@+id/shareGameButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_corner_button"
                android:backgroundTint="@color/success_green"
                android:text="ðŸ“¤ Share Game"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp" />

            <Button
                android:id="@+id/rateAppButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_corner_button"
                android:backgroundTint="@color/neon_purple"
                android:text="â­ Rate App"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp" />

            <Button
                android:id="@+id/aboutButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_corner_button"
                android:backgroundTint="@color/info_blue"
                android:text="â„¹ï¸ About"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp" />

            <Button
                android:id="@+id/privacyPolicyButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_corner_button"
                android:backgroundTint="@color/dark_gray"
                android:text="ðŸ”’ Privacy Policy"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp" />

            <Button
                android:id="@+id/exportDataButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_corner_button"
                android:backgroundTint="@color/neon_cyan"
                android:text="ðŸ“¦ Export Data"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp" />

            <Button
                android:id="@+id/importDataButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/rounded_corner_button"
                android:backgroundTint="@color/electric_blue"
                android:text="ðŸ“¥ Import Data"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView> 