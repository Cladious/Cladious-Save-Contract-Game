<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/battle_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Battle Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Cladious Logo (Small) -->
            <ImageView
                android:id="@+id/cladiousLogoBattle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/cladious_logo_placeholder"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/battleTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âš”ï¸ SPEED RACE BATTLE!"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:gravity="center" />

            <!-- Battle Timer -->
            <TextView
                android:id="@+id/timerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â° 02:00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/timer_bg"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Battle Arena -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/dark_card"
            app:cardCornerRadius="16dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Players Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Player 1 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/player1_bg"
                        android:padding="12dp"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:id="@+id/player1Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”¥ You"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/neon_green" />

                        <TextView
                            android:id="@+id/player1Score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="250 pts"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="4dp" />

                        <ProgressBar
                            android:id="@+id/player1Progress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:layout_marginTop="8dp"
                            android:progress="2"
                            android:max="5"
                            android:progressTint="@color/neon_green"
                            android:progressBackgroundTint="@color/dark_gray" />

                    </LinearLayout>

                    <!-- VS Indicator -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âš”ï¸\nVS"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/red"
                        android:gravity="center"
                        android:layout_gravity="center_vertical" />

                    <!-- Player 2 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/player2_bg"
                        android:padding="12dp"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/player2Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’€ CyberNinja"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/red" />

                        <TextView
                            android:id="@+id/player2Score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="180 pts"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="4dp" />

                        <ProgressBar
                            android:id="@+id/player2Progress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:layout_marginTop="8dp"
                            android:progress="1"
                            android:max="5"
                            android:progressTint="@color/red"
                            android:progressBackgroundTint="@color/dark_gray" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Battle Power-ups -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/dark_card"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš¡ BATTLE POWER-UPS"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/cyan"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:id="@+id/powerUpButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Challenge Code -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#0D1117"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’» BATTLE CHALLENGE"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/codeDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/code_bg"
                    android:fontFamily="monospace"
                    android:padding="16dp"
                    android:text="Loading battle challenge..."
                    android:textColor="@color/white"
                    android:textIsSelectable="true"
                    android:textSize="12sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Battle Gaps -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/dark_card"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš”ï¸ BATTLE GAPS - RACE TO SOLVE!"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:id="@+id/gapsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Battle Submit Button -->
        <Button
            android:id="@+id/submitButton"
            style="@style/BattleButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="âš”ï¸ SUBMIT BATTLE SOLUTION!"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

</ScrollView> 