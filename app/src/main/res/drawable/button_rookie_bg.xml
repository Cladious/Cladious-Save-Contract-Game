<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#66A3D932"
                android:endColor="#66228B22"
                android:angle="45" />
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="#A3D932" />
        </shape>
    </item>
    
    <!-- Disabled State -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#33A3D932" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="#66A3D932" />
        </shape>
    </item>
    
    <!-- Normal State -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#A3D932"
                android:endColor="#228B22"
                android:angle="45" />
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" />
        </shape>
    </item>
    
</selector> 