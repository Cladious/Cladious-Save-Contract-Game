<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#66E74C3C"
                android:endColor="#66C0392B"
                android:angle="45" />
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="#E74C3C" />
        </shape>
    </item>
    
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#33E74C3C" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="#66E74C3C" />
        </shape>
    </item>
    
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#E74C3C"
                android:endColor="#C0392B"
                android:angle="45" />
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" />
        </shape>
    </item>
    
</selector> 